<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="password">
	<select id="getPassword" parameterClass="integer" resultClass="net.aihat.dto.PasswordDto">
		SELECT
			id as id,
  			encrypted as encrypted,
		FROM password
		WHERE id = #id#
	</select>
	<update id="updatePassword" parameterClass="net.aihat.dto.PasswordDto">
		UPDATE password
		SET encrypted = #encrypted#
		WHERE id = #id#;
	</update>
	<insert id="insertPassword" parameterClass="net.aihat.dto.PasswordDto">
		INSERT INTO password(encrypted)
		VALUES(#encrypted#)
	</insert>
</sqlMap>